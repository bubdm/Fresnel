@{
    Layout = null;
    var version = Environment.TickCount.ToString();
}

<!DOCTYPE html>
<html ng-app="fresnelApp">
<head>
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />

    <meta name="viewport" content="width=device-width" />

    @*3rd party:*@
    <script src="~/scripts/angular.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="~/Scripts/ng-pageslide/angular-pageslide-directive.js"></script>
    <script src="~/Scripts/isotope.pkgd.min.js"></script>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" />

    @*Custom content:*@
    <script src="~/scripts/_app/FresnelApp.js?v=@version"></script>
    <script src="~/scripts/_app/Toolbox.js?v=@version"></script>
    <link href="~/Content/toolbox.css?v=@version" rel="stylesheet" />
    <link href="~/Content/workbench.css?v=@version" rel="stylesheet" />

    <title>Index</title>
</head>
<body>

    <div ng-controller="toolboxController">
        <h2>Class Libary</h2>

        <a class="toolboxPanelOpener" pageslide ps-side="top" ps-speed="0.5" ps-size="400px" href="#toolboxPanel">Open</a>

        <div id="toolboxPanel">
            <a ng-click="loadClassHierarchy()">Load</a>
            <a id="toolboxPanel-close" href="#">Close</a>
            {{newInstance}}

            <hr />
            <div ng-repeat="item in classHierarchy" ng-include="'/Templates/classItem.html'">
            </div>
        </div>

        <div id="workbench" class="workbenchContainer js-isotope" data-isotope-options='{ "itemSelector": ".explorerPanel" }'>
            <div class="explorerPanel " ng-controller="appController">
                <h2>{{identityMap}}</h2>
            </div>
            <div class="explorerPanel ">
                Item #2
            </div>
            <div class="explorerPanel ">
                Item #3
            </div>
            <div class="explorerPanel ">
                Item #3
            </div>
            <div class="explorerPanel ">
                Item #4
            </div>
            <div class="explorerPanel ">
                Item #5
            </div>
            <div class="explorerPanel ">
                Item #6
            </div>
            <div class="explorerPanel ">
                Item #7
            </div>
        </div>
    </div>

</body>
</html>