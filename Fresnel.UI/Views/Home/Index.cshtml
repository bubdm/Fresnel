@{
    Layout = null;
    var version = Environment.TickCount.ToString();
}

<!DOCTYPE html>
<html lang="en" ng-app="fresnelApp">
<head>
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />

    <meta name="viewport" content="width=device-width" />

    <script src="~/scripts/angular.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="~/Scripts/ng-pageslide/angular-pageslide-directive.js"></script>
    <script src="~/Scripts/angular-isotope.js"></script>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" />

    <script src="~/scripts/_app/FresnelApp.js?v=@version"></script>
    <script src="~/scripts/_app/Toolbox.js?v=@version"></script>
    <link href="~/Content/toolbox.css?v=@version" rel="stylesheet" />
    <link href="~/Content/workbench.css?v=@version" rel="stylesheet" />

    <title>Index</title>
</head>

<body>

    <div ng-controller="appController" class="container">
        <span>{{appControlleridentityMap.items}}</span>

        <div ng-controller="toolboxController">
            <h2>Class Libary</h2>

            <a class="toolboxPanelOpener" pageslide ps-side="top" ps-speed="0.5" ps-size="400px" href="#toolboxPanel">Open</a>

            <div id="toolboxPanel">
                <a ng-click="loadClassHierarchy()">Load</a>
                <a id="toolboxPanel-close" href="#">Close</a>
                <hr />
                <div ng-repeat="item in classHierarchy" ng-include="'/Templates/classItem.html'">
                </div>
            </div>
        </div>

        <div ng-controller="explorerController" isotope-container="">
            <div class="explorerPanel" isotope-item="" ng-repeat="obj in openExplorers" ng-include="'/Templates/objectExplorer.html'">
            </div>
        </div>

    </div>

</body>
</html>