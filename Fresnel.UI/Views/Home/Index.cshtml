@{
    Layout = null;
    var version = Environment.TickCount.ToString();
}

<!DOCTYPE html>
<html lang="en" ng-app="fresnelApp">
<head>
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />

    <meta name="viewport" content="width=device-width" />

    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/scripts/angular.js"></script>
    <script src="~/Scripts/ng-dock.js"></script>

    <script src="~/Scripts/angular-ui/ui-bootstrap.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>

    <script src="~/Scripts/angular-isotope.js"></script>
    <link href="~/Content/isotope.css" rel="stylesheet" />

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" />

    <script src="~/scripts/_app/FresnelApp.js?v=@version"></script>
    <script src="~/scripts/_app/Toolbox.js?v=@version"></script>
    <link href="~/Content/toolbox.css?v=@version" rel="stylesheet" />
    <link href="~/Content/workbench.css?v=@version" rel="stylesheet" />

    <title>Index</title>
</head>

<body dock-ref="" ng-controller="appController">

    <div dock="'top'">
        Header
    </div>

    <div dock="'left'" id="toolboxPanel"  ng-controller="toolboxController">
        <a ng-click="loadClassHierarchy()" href="#">Load</a>
        <h3>Class library</h3>
        <div ng-repeat="namespace in classHierarchy" class="">
            <span>{{namespace.Name}}</span>
            <div ng-repeat="item in namespace.Classes" ng-include="'/Templates/classItem.html'" class="">
            </div>
        </div>
    </div>

    <div dock="'fill'" isotope-container="" class="isotope" ng-controller="explorerController">
        <div class="isotope-item" isotope-item="" ng-repeat="obj in visibleExplorers">
            <div ng-switch="obj.IsCollection">
                <div ng-switch-when="true">
                    <div ng-include="'/Templates/collectionExplorer.html'"></div>
                </div>
                <div ng-switch-default>
                    <div ng-include="'/Templates/objectExplorer.html'"></div>
                </div>
            </div>
        </div>
    </div>

    <div dock="'bottom'">
        <p>Footer</p>
    </div>

</body>
</html>
